{% extends 'ZPBAdminBundle:Layouts:master.html.twig' %}

{% block title %}Sites{% endblock %}

{% block content %}
    <h1 class="page-header">Dashboard | {{ block('title') }}</h1>



    <h2 class="sub-header">Sites enregistrés</h2>

    <div class="row">
        <div class="col-sm-8 clo-md-8">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Nom court</th>
                        <th>Url</th>
                        <th>Route</th>
                        <th colspan="2">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if sites|length>0 %}
                    {% for site in sites %}
                        <tr>
                            <td>{{ site.name }}</td>
                            <td>{{ site.shortname }}</td>
                            <td><a href="{{ site.url }}" target="_blank">{{ site.url }}</a></td>
                            <td>{{ site.route }}</td>
                            <td><a class="btn btn-default" href=""><i class="fa fa-edit"></i></a></td>
                            <td><a class="btn btn-default" href=""><i class="fa fa-trash-o"></i></a></td>
                        </tr>
                    {% endfor %}
                    {% else %}
                    <tr>
                        <td colspan="6">Pas de sites enregistrés</td>
                    </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-sm-4 clo-md-4"></div>
    </div>
    <h2 class="sub-header">Ajouter un site</h2>
    <div class="row">
        <div class="col-sm-8 clo-md-8">
            <form class="form">
                <div class="form-group">
                    <label for="">Nom</label>
                    <input class="form-control" type="text" id=""/>
                </div>

                <div class="form-group">
                    <label for="">Nom court</label>
                    <input class="form-control" type="text" id=""/>
                </div>

                <div class="form-group">
                    <label for="">Route</label>
                    <input class="form-control" type="text" id=""/>
                </div>


            </form>
        </div>
        <div class="col-sm-4 clo-md-4"></div>
    </div>


{% endblock %}
