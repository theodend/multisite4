{% extends 'ZPBAdminBundle:Layouts:master.html.twig' %}

{% block title %}Alertes | ZooParc {% endblock %}

{% block content %}
    <h1 class="page-header">Dashboard | {{ block('title') }}</h1>
    <div class="row">
        <div class="col-sm-8 col-md-8">
            <h2>Alertes en cours</h2>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Type</th>
                    <th>Titre</th>
                    <th>DÃ©but</th>
                    <th>Fin</th>

                    <th>Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for alert in alerts %}
                    <tr>
                        <td>{{ alert.type }}</td>
                        <td>{{ alert.title }}</td>
                        <td>{{ alert.startAt|date("d/m/y H:i:s") }}</td>
                        <td>{{ alert.endAt|date("d/m/y H:i:s") }}</td>

                        <td><button class="btn btn-default" data-id="{{ alert.id }}"><i class="fa fa-trash-o"></i></button><div class="loader"></div></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-sm-4 col-md-4"></div>
    </div>

{% endblock %}
