<ul class="pagination">
    {% if pagination.totalPage > minPageForArrows %}
        {% if pagination.pageNum > 1 %}
            <li class="nav"><a href="{{ path("zpb_sites_zoo_news_news", {page: 1}) }}"><i class="fa fa-angle-double-left"></i></a></li>
            <li class="nav"><a href="{{ path("zpb_sites_zoo_news_news", {page: pagination.pageNum-1}) }}"><i class="fa fa-angle-left"></i></a></li>
        {% else %}
            <li class="nav"><span><i class="fa fa-angle-double-left"></i></span></li>
            <li class="nav"><span><i class="fa fa-angle-left"></i></span></li>
        {% endif %}
    {% endif %}

    {% for i in 1..pagination.totalPage %}
        {% if i == pagination.pageNum %}
            <li class="page current"><span>{{ i }}</span></li>
        {% else %}
            <li class="page"><a href="{{ path("zpb_sites_zoo_news_news", {page: i}) }}">{{ i }}</a></li>
        {% endif %}

    {% endfor %}

    {% if pagination.totalPage > minPageForArrows %}
        {% if pagination.pageNum <  pagination.totalPage %}
            <li class="nav"><a href="{{ path("zpb_sites_zoo_news_news", {page: pagination.pageNum+1}) }}"><i class="fa fa-angle-right"></i></a></li>
            <li class="nav"><a href="{{ path("zpb_sites_zoo_news_news", {page: pagination.totalPage}) }}"><i class="fa fa-angle-double-right"></i></a></li>
        {% else %}
            <li class="nav"><span><i class="fa fa-angle-right"></i></span></li>
            <li class="nav"><span><i class="fa fa-angle-double-right"></i></span></li>
        {% endif %}
    {% endif %}
</ul>
