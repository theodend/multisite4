{% set type = (type is defined) ? type : "website" %}
{{ include("ZPBSitesZooBundle:Incs/facebook:base.html.twig") }}
<meta property="og:title" content="{{ title }}"/>
<meta property="og:type" content="{{ type }}"/>
<meta property="og:url" content="{{ url(request.attributes.get('_route'), request.attributes.get('_route_params')) }}"/>
<meta property="og:description" content="{{ description }}" />
{% if imageUrl != null %}
    <meta property="og:image" content="{{ imageUrl }}"/>
{% endif %}
