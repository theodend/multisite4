{% set active_site = (active_site is defined) ? active_site : null %}
{% set active_page = (active_page is defined) ? active_page : null %}
<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% if block('title') %}{{ block('title') }} {% else %}Bienvenue {% endif %}| ZooParc de Beauval</title>
    {% if block('description') %}
        <meta name="description" content="{{ block('description') }}"/>
    {% endif %}
    {% if block('keywords') %}
        <meta name="keywords" content="{{ block('keywords') }}"/>
    {% endif %}

    {% block metas_fb %}{% endblock %}

    {% block headLinks %}
        <link rel="stylesheet" href="/css/sites/zoo/master.mobile.css"/>
        <link rel="stylesheet" href="/css/font-awesome.min.css"/>
    {% endblock %}

    {% block headStyles %}{% endblock %}

    {% block headScripts %}
        <script src="/js/vendor/jquery-2.1.1.min.js"></script>
        <script src="/js/sites/zoo/main.mobile.js"></script>
    {% endblock %}
</head>
<body>
{% block body %}
    <div id="site-container" class="site-container">
        <div id="site-pusher" class="site-pusher">

            {% block main_top_bar %}
                {{ render(controller('ZPBSitesCommonBundle:Navs:topBar', {active_site: active_site})) }}
            {% endblock %}
            <div id="main-menu">
                {% set pratique = [] %}
                <ul>
                    <li><a href="{{ path("zpb_sites_zoo_homepage") }}">Accueil</a></li>
                    <li class="dropdown{% if active_page in pratique %} active{% endif %}" ><a href="javascript:void(0)">Pratique</a>
                        <ul>
                            <li class="{% if active_page == "acces" %} active{% endif %}"><a href="">Accès</a></li>
                            <li class="{% if active_page == "horaires_tarifs" %} active{% endif %}"><a href="">Horaires et tarifs</a></li>
                            <li class="{% if active_page == "animations_spectacles" %} active{% endif %}"><a href="">Animations et spectacles</a></li>
                            <li class="{% if active_page == "restauration" %} active{% endif %}"><a href="">Restauration</a></li>
                            <li class="{% if active_page == "services" %} active{% endif %}"><a href="">Services</a></li>
                            <li class="{% if active_page == "faq" %} active{% endif %}"><a href="">FAQ</a></li>
                            <li class="{% if active_page == "contact" %} active{% endif %}"><a href="">Contact</a></li>
                        </ul>
                    </li>
                    <li><a href="#">ZooParc</a></li>
                    <li><a href="#">Nouveautés</a></li>
                    <li><a href="#">Actualité</a></li>
                    <li><a href="#">Pédagogie</a></li>
                    <li class="dropdown"><a href="#">Dormir à Beauval</a>
                        <ul>
                            <li><a href="#">Les Jardins de Beauval</a></li>
                            <li><a href="#">Les Hameaux de Beauval</a></li>
                            <li><a href="http://lespagodesdebeauval.com">Les Pagodes de Beauval</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div id="main-content">
                    <div id="main-header">
                        <button id="menu-toggler"><i class="fa fa-bars"></i></button>
                        <div id="logo">
                            {{ include("ZPBSitesZooBundle:Incs:logo_zooparc_svg.html.twig") }}
                        </div>
                    </div>
                {% block mainContent %}
                    <div id="content">
                        {% block content %}{% endblock %}
                    </div>
                    <div id="site-overlay" class="site-overlay"></div>
                {% endblock %}
            </div>

            {% block mainfooter%}
                {{ render(controller("ZPBSitesZooBundle:Partials:mainMobileFooter")) }}
            {% endblock %}

        </div>
    </div>

{% endblock %}

</body>
</html>
